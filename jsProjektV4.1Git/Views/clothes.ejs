<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <title>Adatmegjelenítés</title>
  </head>
  <body>
  <section id ="firstImpressionStorage">
    <div class="container-fluid">
      <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">Storage</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/foods">Ételek</a>
            <a class="nav-item nav-link" href="/clothes">Ruhák</a>
            <a class="nav-item nav-link" href="/feltoltes">Termék feltöltés</a>
          </div>
        </div>
      </nav>
    </div>
  </section>
  <section id = "filter">
    <div class="container">
      <h1>Termék szűrése egy feltétel alapján.</h1>
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="search">Termék keresése</label>
          <input type="text" class="form-control" placeholder="Termék teljes neve" id="search" name="search">
          <button type="submit" class="btn btn-success" onclick="searchClothByType()" id="submitSearch">Keresés tipus alapján</button>
        </div>
        <div class="form-group col-md-4">
          <label for="search">Legfeljebb ennyi legyen: </label>
          <input type="number" class="form-control" placeholder="Legfeljebb ennyi" id="searchByMaxQuantity">
          <button type="submit" class="btn btn-success" onclick="searchClothByMax()" id="submitSearch">Keresés maximum alapján</button>
        </div>
        <div class="form-group col-md-4">
          <label for="search">Ennél kevesebb legyen: </label>
          <input type="number" class="form-control"  placeholder="Ennél kevesebb" id="searchByMinQuantity">
          <button type="submit" class="btn btn-success" onclick="searchClothByMin()" id="submitSearch">Keresés minimum alapján</button>
        </div>
      </div>
    </div>
  </section>
  <div class="container">
    <h1 class="focim">Ruhák</h1>
    <section id="products">
      <div class="row">
        <% for (let i = 0; i < data.length; i++) { %>
        <div class="col-sm-4 elem">
          <h2 class="vonalkod"><%= data[i].vonalkod %></h2>
          <h2 class="termekTipus"><%= data[i].fajta %></h2>
          <h2 class="desc"><%= data[i].leiras %></h2>
          <p>A termék ára: <%= data[i].ar %> Ft</p>
          <img src="kepek/<%= data[i].kepcim %>" alt="kep" class="kep"/>
          <p class="meret">Termék mérete: <%= data[i].meret %></p>
          <p class="nem">Nem: <%= data[i].neme %></p>
          <p class="nem">Mennyiség: <span class="mennyi"><%= data[i].mennyiseg %></span></p>
          <a href="/clothes/<%= data[i]._id %>/<%= data[i].kepcim %>" class="link">Törlés</a>
          <a href="/szerkesztesruha/<%= data[i]._id %>" class="link">Megtekint</a>
        </div>
        <% } %>
      </div>
    </section>
  </div>
  <script src="filterController.js"></script>
</body>
</html>
